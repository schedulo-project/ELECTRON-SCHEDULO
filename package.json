{
  "name": "schedulo",
  "version": "1.0.0",
  "author": "Baek",
  "description": "Electron Test for Schedulo",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.example.schedulo",
    "productName": "Schedulo",
    "files": [
      "public/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "output": "dist"
    },

    "win": {
      "target": ["nsis"],
      "icon": "public/schedulo_logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },

    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "icon": "public/schedulo_logo.icns",
      "hardenedRuntime": false,
      "sign": false
    },
    "dmg": {
      "background": "public/background.png",
      "icon": "public/schedulo_logo.icns",
      "contents": [
        { "x": 130, "y": 220, "type": "file" },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    }
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  }
}
